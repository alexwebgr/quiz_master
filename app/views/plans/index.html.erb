<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Handle</th>
      <th>Price</th>
      <th>Duration</th>
      <th>Duration unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.label %></td>
        <td><%= plan.handle %></td>
        <td><%= plan.price %></td>
        <td><%= plan.duration %></td>
        <td><%= plan.duration_unit %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

